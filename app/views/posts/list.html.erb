<%- model_class = Post -%>

<ul class="media-list">
  <% @posts.each do |post| %>
    <li class="media">
      <div class="media-body">
        <h4 class="media-heading"><%= link_to post.title, post_path(post) %></h4>
        <span class="label label-default"><%= post.author %></span>
        <span class="label label-default"><%= post.created_at.strftime("%d %b. %Y") %></span>
        <p><%= post.body.html_safe %></p>
      </div>
    </li>
  <% end %>
</ul>
